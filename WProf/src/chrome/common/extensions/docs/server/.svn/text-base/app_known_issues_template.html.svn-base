<h3>Open known issues</h3>
<ul>
{% for issue in open_issues %}
  <li><a href="http://code.google.com/p/chromium/issues/detail?id={{ issue.id }}">{{ issue.title|escape }}</a></li>
{% endfor %}
</ul>

<h3>Recently closed known issues</h3>
<ul>
{% for issue in closed_issues %}
  <li><a href="http://code.google.com/p/chromium/issues/detail?id={{ issue.id }}">{{ issue.title|escape }}</a></li>
{% endfor %}
</ul>
